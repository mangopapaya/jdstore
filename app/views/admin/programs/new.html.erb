<h3> New Program </h3>

<%= simple_form_for [:admin,@program] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.select :pcategory_id, @pcategories, :include_blank => "Categories" %>
  </div>
  <br>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :space %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <div class="group">
    <%= f.input :image, as: :file %>
  </div>

  <%= f.button :submit, "Submit", data: { disable_with: "Submitting..." } %>
<% end %>
