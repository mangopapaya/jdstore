<div class="row">
  <div class="col-xs-12 col-md-6">
    <% if @program.image.present? %>
      <%= image_tag(@program.image.medium.url, class: "thumbnail") %>
    <% else %>
      <%= image_tag("http://placeholder.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2><%= @program.title %></h2>
    <h4>Program Category: <%= @program.category.name %></h2>
      <br>
    <div style="height:100px;">
      <p>
        <%= @program.description %>
      </p>
      <p>
        Age range: <%= @program.age_range %>
      </p>
    </div>
    <div> Slot: <%= @program.space %></div>
    <div class="program-price"> ï¿¥ <%= @program.price %></div>
    <br>
        <%= link_to("Back", admin_programs_path) %>
    <div class="pull-right">
      <%= link_to("Edit Program", edit_admin_program_path(@program), :class => "btn btn-danger btn-lg") %>
    </div>
  </div>
</div>
