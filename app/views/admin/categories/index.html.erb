<h2> Category List </h2>

<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("Add New Category", new_admin_category_path, class: "btn btn-primary btn-sm") %>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th width='100px'>Name</th>
      <th width='200px'>Description</th>
      <th width='100px'>Program Counts</th>
      <th width='100px'>Options</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= category.description %></td>
      <td><%= category.programs.count %></td>
      <td>
        <%= link_to 'Show', admin_category_path(category) %> |
        <%= link_to 'Edit',edit_admin_category_path(category)%> |
        <%= link_to 'Delete',admin_category_path(category), method: :delete, data: {confirm: 'Are you sure to remove this category?'}%>
      </td>
    </tr>
    <% end %>

  </tbody>
</table>
