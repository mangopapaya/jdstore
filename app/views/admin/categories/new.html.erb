<div class="container">

  <h2> New Category</h2>

  <%= simple_form_for [:admin, @category] do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
    </div>

    <div class="form-inputs">
      <%= f.input :description %>
    </div>

    <div class="form-actions">
      <%= f.submit "Create Category" %>
    </div>
  <% end %>
</div>
