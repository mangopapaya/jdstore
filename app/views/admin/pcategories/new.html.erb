<h1> New Category</h1>

<%= simple_form_for [:admin, @pcategory] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.submit "Create Category" %>
  </div>
<% end %>
