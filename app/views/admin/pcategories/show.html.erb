<h1><%= @pcategory.name %></h1>

<% for program in @pcategory.programs do %>
  <div class="col-xs-6 col-md-3">
    <%= link_to program_path(program) do %>
      <% if program.image.present? %>
        <%= image_tag(program.image.thumb.url, class: "thumbnail") %>
      <% else %>
        <%= image_tag("http://placeholder.it/200x200&text=No Pic", class: "thumbnail") %>
      <% end %>
     <% end %>
    <b><%= program.title %></b> <div class="index-cat" ><%= program.pcategory.name if program.pcategory %></div>
  </div>
<% end %>
