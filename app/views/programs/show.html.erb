<div class="row">
  <div class="col-xs-12 col-md-6">
    <% if @program.image.present? %>
      <%= image_tag(@program.image.medium.url, class: "thumbnail") %>
    <% else %>
      <%= image_tag("http://placeholder.it/450x300&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2><%= @program.title %></h2>
    <h4>Program Category:
      <% if @program.category %>
        <%= link_to(@program.category.name, programs_path(category: @program.category.name)) %>
      <% end %>
    </h2>
      <br>
    <div style="height:100px;">
      <p>
        <%= @program.description %>
      </p>
    </div>
    <div> Slot: <%= @program.space %></div>
    <div class="program-price"> $ <%= @program.price %></div>
    <div class="pull-right">
      <% if @program.space > 0 %>
        <%= link_to("Reserve Program", reserve_program_program_path(@program), :method => :post, :class => "btn btn-alpha btn-lg") %>
      <% else %>
        All slots have been reserved. Come earlier next time!
      <% end %>
    </div>
  </div>
</div>
